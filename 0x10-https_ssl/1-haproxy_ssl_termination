global
    log /dev/log local0
    log /dev/log local1 notice
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend www-https
    bind *:443 ssl crt /etc/haproxy/certs/your_certificate.pem
    mode http
    option forwardfor
    reqadd X-Forwarded-Proto:\ https

    tcp-request content accept if {ssl_c_used }
    acl has_client_cert ssl_c_verify(0)
    http-request deny if !has_client_cert

    default_backend www-backend

backend www-backend
    mode http
    server web-server 18.204.5.34:443 check
