global
    maxconn 4096
    ssl-default-bind-ciphers PROFILE=SYSTEM
    log /dev/log local0

defaults
    log global
    mode http
    option httplog
    option dontlognull
    option forwardfor
    retries 3
    timeout http-request 10s
    timeout queue 1m
    timeout connect 10s
    timeout client 1m
    timeout server 1m
    timeout http-keep-alive 10s
    timeout check 10s
    maxconn 3000

frontend www-http
    bind *:80
    redirect scheme https code 301 if !{ ssl_fc }

frontend www-https
    bind *:443 ssl crt /etc/haproxy/certs/your_certificate.pem
    reqadd X-Forwarded-Proto:\ https
    default_backend www-backend

backend www-backend
    balance roundrobin
    server web-server 18.204.5.34:443 check
